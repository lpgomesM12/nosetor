<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Empresas</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Empresa</th>
          <th>Tele1</th>
          <th>Tele2</th>
          <th>Categoria</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @st_empresas.each do |st_empresa| %>
          <tr>
            <td><%= st_empresa.nome_empresa %></td>
            <td><%= st_empresa.tele_telefone1 %></td>
            <td><%= st_empresa.tele_telefone2 %></td>
            <td><%= st_empresa.st_category.nome_categoria %></td>
            <td><%= link_to 'Exibir', st_empresa %></td>
            <td><%= link_to 'Editar', edit_st_empresa_path(st_empresa) %></td>
            <td><%= link_to 'Deletar', st_empresa, method: :delete, data: { confirm: 'Deseja excluir?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<br>

